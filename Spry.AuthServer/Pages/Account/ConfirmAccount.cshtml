@page
@model Spry.AuthServer.Pages.Account.ConfirmAccountModel
@{
    ViewData["Title"] = "Confirm your account";

}

<div class="card card_layout card_width mb-5">
    <img class="mx-auto" alt="achieve logo" src="~/images/achieve-logo-white.svg" />
    <div class="signUp_header_container">
        @* <h4 class="signUp_header">Register</h4>
        <p class="form-info-p"> Create a new  account </p> *@
    </div>
    <form class="signUp w-100" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <input type="hidden" asp-for="Input.UserId" />
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Code" class="form-control ach_input" aria-required="true" placeholder="enter confirmation code" />
            <label asp-for="Input.Code" class="form-label"></label>
            <span asp-validation-for="Input.Code" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Continue</button>
    </form>
    <form method="post">
        <button asp-page-handler="Resend" asp-route-returnUrl="@Model.ReturnUrl" asp-route-userId="@Model.Input.UserId"
                class="btn btn-link">
            Resend Code
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
