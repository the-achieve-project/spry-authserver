@page
@model Spry.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<h2>Enter reset code.</h2>
<hr />
@* <partial name="_StatusMessage" model="Model.StatusMessage" />
 *@
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.UserId" type="hidden" />
            <div class="form-floating mb-3">
                <input asp-for="Input.Code" class="form-control" aria-required="true" placeholder="code" />
                <label asp-for="Input.Code" class="form-label"></label>
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Continue</button>
        </form>
        <form method="post">
            <button asp-page-handler="Resend" asp-route-returnUrl="@Model.ReturnUrl" asp-route-userId="@Model.Input.UserId" 
              class="btn btn-link">
                Resend Code
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
